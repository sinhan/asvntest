#!/bin/sh
USAGE=$0" jmeter-cl [-o <output-file>] [-p <properties-file>] url"

PROPERTIES=jmeter.properties
OUTFILE=jmeter.out
URL=$1;

while getopts o:p: x; do
	case $x in
	    	o) OUTFILE=$OPTARG;;
	   	p) PROPERTIES=$OPTARG;;
		?) echo $USAGE; exit -1;;
	esac;
done

case $OPTIND in
	1) URL=$1;;
	3) URL=$3;;
	5) URL=$5;;
esac;

java -classpath $CLASSPATH:`dirname $0`/ApacheJMeter.jar org.apache.jmeter.TextDriver -p $PROPERTIES -o $OUTFILE "$URL"
